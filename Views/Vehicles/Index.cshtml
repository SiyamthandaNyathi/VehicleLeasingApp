@model IEnumerable<VehicleLeasingApp.Models.Vehicle>
@using VehicleLeasingApp.Models
@{
    ViewData["Title"] = "Index";
    var report = ViewBag.VehicleReport as List<VehicleReportViewModel>;
}

<h1>Index</h1>

<h2>Vehicle Allocation Report</h2>
@if (report != null && report.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Manufacturer</th>
                <th>Supplier</th>
                <th>Branch</th>
                <th>Client</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var row in report)
        {
            <tr>
                <td>@row.Manufacturer</td>
                <td>@row.SupplierName</td>
                <td>@row.BranchName</td>
                <td>@row.ClientName</td>
                <td>@row.Count</td>
            </tr>
        }
        <tr>
            <td colspan="4"><strong>Total</strong></td>
            <td><strong>@report.Sum(r => r.Count)</strong></td>
        </tr>
        </tbody>
    </table>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
